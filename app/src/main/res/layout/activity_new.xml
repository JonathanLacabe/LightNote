<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2B2D">

    <!-- Top Button Layout (File, View, Help) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#2A2B2D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <!-- File Button -->
        <TextView
            android:id="@+id/fileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Divider 1 -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/fileButton"
            android:layout_marginStart="18dp" />

        <!-- View Button -->
        <TextView
            android:id="@+id/viewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toEndOf="@id/fileButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="37dp" />

        <!-- Divider 2 -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/viewButton"
            android:layout_marginStart="17dp" />

        <!-- Help Button -->
        <TextView
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toEndOf="@id/viewButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="37dp" />

        <!-- Divider 3 -->
        <View
            android:id="@+id/divider3"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/helpButton"
            android:layout_marginStart="12dp" />

        <!-- TextView for displaying and scrolling the file name -->
        <TextView
            android:id="@+id/fileNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="default"
            android:textSize="31sp"
            android:fontFamily="@font/quadriga_bq"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/divider3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider4"
            android:layout_marginStart="2dp" />

        <!-- Divider 4 -->
        <View
            android:id="@+id/divider4"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toStartOf="@id/makeLightsButton"
            android:layout_marginStart="-12dp" />

        <!-- Make Lights Button -->
        <TextView
            android:id="@+id/makeLightsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Lights!"
            android:textColor="#FFFFFF"
            android:textSize="31sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle Menu for Track and Playback Controls -->
    <LinearLayout
        android:id="@+id/middleMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#2A2B2D"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/topButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Rewind Button -->
        <ImageView
            android:id="@+id/rewindButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_rewind"
        android:contentDescription="@string/rewind_button"
            app:tint="#FFFFFF" />

        <!-- Divider 5 -->
        <View
            android:id="@+id/divider5"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toStartOf="@id/rewindButton"
            android:layout_marginStart="3dp"
            />

        <!-- Pause Button -->
        <ImageView
            android:id="@+id/pauseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pause"
        android:contentDescription="@string/pause_button"
            android:layout_marginStart="3dp"
            app:tint="#FFFFFF" />

        <!-- Divider 6 -->
        <View
            android:id="@+id/divider6"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toStartOf="@id/pauseButton"
            android:layout_marginStart="4dp"
            />

        <!-- Play Button -->
        <ImageView
            android:id="@+id/playButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
        android:contentDescription="@string/play_button"
            android:layout_marginStart="3dp"
            app:tint="#FFFFFF" />

        <!-- Divider 7 -->
        <View
            android:id="@+id/divider7"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toStartOf="@id/playButton"
            android:layout_marginStart="4dp"
            />

        <!-- Track Name Display -->
        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq"
            android:layout_marginStart="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Type Display -->
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq" />

        <!-- Divider -->
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Channel Display -->
        <TextView
            android:id="@+id/channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq" />

        <!-- Divider -->
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Instrument Display -->
        <TextView
            android:id="@+id/instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrument"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq" />

        <!-- Divider -->
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Time Display -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq" />

        <!-- Divider -->
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <!-- Duration Display -->
        <TextView
            android:id="@+id/timeDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/quadriga_bq" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
