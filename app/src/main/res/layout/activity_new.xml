<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LightNote"
    tools:context=".NewActivity">

    <!-- Top Buttons Row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B3C3D"
    android:padding="10dp">

    <!-- File Button -->
    <Button
        android:id="@+id/fileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4D4D4D"
        android:textSize="18sp"
        android:fontFamily="@font/quadriga_bq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4D4D4D"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/quadriga_bq"
        app:layout_constraintStart_toEndOf="@id/fileButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4D4D4D"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/quadriga_bq"
        app:layout_constraintStart_toEndOf="@id/editButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <!-- Empty Space (to be elaborated later) -->
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/redoButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arduinoButton"
        android:layout_marginStart="10dp" />

    <!-- Arduino™-ify Button -->
    <Button
        android:id="@+id/arduinoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arduino™-ify"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4D4D4D"
        android:textSize="20sp"
        android:fontFamily="@font/quadriga_bq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
