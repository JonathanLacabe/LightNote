<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2B2D">

    <!-- Top Button Layout (File, View, Help) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#2A2B2D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <!-- File Button -->
        <TextView
            android:id="@+id/fileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Divider 1 -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/fileButton"
            android:layout_marginStart="18dp" />

        <!-- View Button -->
        <TextView
            android:id="@+id/viewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toEndOf="@id/fileButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="37dp" />

        <!-- Divider 2 -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/viewButton"
            android:layout_marginStart="17dp" />

        <!-- Help Button -->
        <TextView
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintStart_toEndOf="@id/viewButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="37dp" />

        <!-- Divider 3 -->
        <View
            android:id="@+id/divider3"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toEndOf="@id/helpButton"
            android:layout_marginStart="12dp" />

        <!-- TextView for displaying and scrolling the file name -->
        <TextView
            android:id="@+id/fileNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="default"
            android:textSize="31sp"
            android:fontFamily="@font/quadriga_bq"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/divider3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider4"
            android:layout_marginStart="2dp" />

        <!-- Divider 4 -->
        <View
            android:id="@+id/divider4"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            app:layout_constraintStart_toStartOf="@id/makeLightsButton"
            android:layout_marginStart="-12dp" />

        <!-- Make Lights Button -->
        <TextView
            android:id="@+id/makeLightsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LightNote"
            android:textColor="#FFFFFF"
            android:textSize="31sp"
            android:fontFamily="@font/quadriga_bq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Middle Menu for Track and Playback Controls -->
    <LinearLayout
        android:id="@+id/middleMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#2A2B2D"
        android:gravity="center_vertical"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        app:layout_constraintTop_toBottomOf="@id/topButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Rewind Button -->
        <ImageView
            android:id="@+id/rewindButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_rewind"
            android:contentDescription="@string/rewind_button"
            app:tint="#FFFFFF" />

        <!-- Divider 5 -->
        <View
            android:id="@+id/divider5"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            android:layout_marginStart="4dp" />

        <!-- Pause Button -->
        <ImageView
            android:id="@+id/pauseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pause"
            android:contentDescription="@string/pause_button"
            android:layout_marginStart="4dp"
            app:tint="#FFFFFF" />

        <!-- Divider 6 -->
        <View
            android:id="@+id/divider6"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            android:layout_marginStart="4dp" />

        <!-- Play Button -->
        <ImageView
            android:id="@+id/playButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
            android:contentDescription="@string/play_button"
            android:layout_marginStart="4dp"
            app:tint="#FFFFFF" />

        <!-- Divider 7 -->
        <View
            android:id="@+id/divider7"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#5A5B5D"
            android:layout_marginStart="4dp" />

        <!-- Track Name Display -->
        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/quadriga_bq"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />


        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerType1"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_divider_style"
            android:layout_marginStart="4dp" />

        <!-- Type Display with Weight and Centered Text -->
        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/quadriga_bq"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:maxWidth="150dp"
            android:gravity="center" />

        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerType2"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_divider_style"
            android:layout_marginStart="4dp" />

        <!-- Channel Display -->
        <TextView
            android:id="@+id/channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/quadriga_bq"
            android:layout_marginStart="4dp"
            android:gravity="center" />

        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerType3"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_divider_style"
            android:layout_marginStart="4dp" />

        <!-- Instrument Display, slightly larger and centered -->
        <TextView
            android:id="@+id/instrument"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Instrument"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/quadriga_bq"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:maxWidth="150dp"
            android:gravity="center"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerType4"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_divider_style"
            android:layout_marginStart="2dp" />

        <!-- Time Display Layout, centered horizontally -->
        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Time Label -->
            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quadriga_bq"
                android:text="Time"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center" />

            <!-- Time Value Display -->
            <TextView
                android:id="@+id/timeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quadriga_bq"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerType5"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@drawable/custom_divider_style" />

        <!-- Duration Display Layout, centered horizontally -->
        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Duration Label -->
            <TextView
                android:id="@+id/durationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quadriga_bq"
                android:text="Duration"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center" />

            <!-- Duration Value Display -->
            <TextView
                android:id="@+id/durationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quadriga_bq"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Fancy Divider -->
        <View
            android:id="@+id/dividerFinal"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@drawable/custom_divider_style"/>

        <!-- Panic Button -->
        <ImageView
            android:id="@+id/panicButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_panic"
            android:contentDescription="@string/panic_button"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"
            app:tint="#FFFFFF" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
